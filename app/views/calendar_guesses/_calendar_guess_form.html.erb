<%= form_for(@calendar_guess) do |f| %>
  <% if @calendar_guess.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calendar_guess.errors.count, "error") %> prohibited this from being saved:</h2>

      <ul>
      <% @calendar_guess.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :turker_id, :value => @current_user.id %>	
  <%= f.hidden_field :meeting_thread_id, :value => @calendar_guess.meeting_thread.id %>	
  
  <div class="field">
    <%= f.label :participants, "Participants (comma separated list of only email addresses)" %><br />
    <%= f.email_field :participants, :size => 80 %>
  </div>

  Start
  <div class="field">
    <%= f.datetime_select :start_date_time %>
  </div>

  End
  <div class="field">
    <%= f.datetime_select :end_date_time %>
  </div>

  <div class="field">
    <%= f.label :time_zone %><br />
    <%= f.time_zone_select :time_zone %>
  </div>


  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, :size => 80 %>
  </div>

  <div class="field">
    <%= f.label :description, "Description (copy and paste the email message)" %><br />
    <%= raw f.text_area :description, :size => '80X80' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
