<%= simple_form_for(@calendar_guess, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @calendar_guess.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calendar_guess.errors.count, "error") %> prohibited this from being saved:</h2>

      <ul>
      <% @calendar_guess.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :turker_id, :value => @current_user.id %>	
  <%= f.hidden_field :meeting_thread_id, :value => @calendar_guess.meeting_thread.id %>	
  	<fieldset>
		<legend>Fill out meeting info</legend>
		<%= f.input :participants, :hint => "Comma separated list of email addresses", :required => true %>
		<!--
		<%= f.input :start_date_time, :as => :string,  :required => true%>
		<%= f.input :end_date_time, :as => :string, :required => true, input_html: { size: 20 } %>
		-->

		<%= f.input :start_date_time, :required => true%>
		<%= f.input :end_date_time, :required => true%>

	 	<%= f.input :time_zone, priority: /US/, :required => true%>


	    <%= f.input :location, :required => true %><br />
	    <%= f.input :summary, :hint => "Participant1, Participant2 - Location - Time", :size => 80, :required => true %>
	    <%= f.input :description, :size => 80, :required => true %>
		<%= f.button :submit, 'Submit', :class => 'btn-primary' %> 
	</fieldset>

<% end %>