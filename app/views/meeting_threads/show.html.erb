
<dl class="dl-horizontal">
  <dt><strong>From:</strong></dt>
  <dd><%= @meeting_thread.from %>/dd>
	
  <dt><strong>To:</strong></dt>
  <dd><%= @meeting_thread.to %></dd>

  <dt><strong>Cc:</strong></dt>
  <%if @meeting_thread.cc.length > 0%>
  	<dd><%= @meeting_thread.cc %></dd>
  <%else%>
	<dd>-</dd>
  <%end%>
 
 <dt><strong>Subject:</strong></dt>
  <%if @meeting_thread.subject.length > 0%>	 
	  <dd><%= @meeting_thread.subject %></dd>
  <%else%>
	<dd>-</dd>
  <%end%>

  <%if @meeting_thread.html.length > 0%>
	  <dt><strong>Html:</strong></dt>
	  <dd><%= raw(@meeting_thread.html) %></dd>
  <%elsif @meeting_thread.text.length > 0%>
    <dt><strong>Text:</strong></dt>
    <dd><%= @meeting_thread.text %></dd>
  <%end%>

</dl>


