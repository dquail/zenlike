<% @meeting_threads.each do |meeting_thread| %>
  <tr>
    <td><%= meeting_thread.user_id %></td>
    <td><%= meeting_thread.headers %></td>
    <td><%= meeting_thread.text %></td>
    <td><%= meeting_thread.html %></td>
    <td><%= meeting_thread.from %></td>
    <td><%= meeting_thread.to %></td>
    <td><%= meeting_thread.cc %></td>
    <td><%= meeting_thread.subject %></td>
    <td><%= meeting_thread.attachmen_count %></td>
    <td><%= link_to 'Show', meeting_thread %></td>
    <td><%= link_to 'Edit', edit_meeting_thread_path(meeting_thread) %></td>
    <td><%= link_to 'Destroy', meeting_thread, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
