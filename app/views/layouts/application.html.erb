<!DOCTYPE html>
<html>
<head>
  <title>Zenlike</title>
  <%= csrf_meta_tag %>
	<%= javascript_include_tag "application" %>
</head>
<body>

<div id="user_nav">
	zenlike.me layout<br/>
  <% if user_signed_in? %>
	Signed in as <%=current_user.email%> - <%= link_to "Account", edit_user_registration_path%>  |  
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
  <% end %>
</div>
<div id = "user_options">
	<%if can? :create, CalendarGuess%>
		<%= link_to "Jobs", meeting_thread_jobs_path%>		
	<%end%>
	<%if can? :create, MeetingThread%>
		<%= link_to "Meeting Threads", meeting_threads_path%>
	<%end%>
</div>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>