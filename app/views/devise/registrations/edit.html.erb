<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-vertical" }) do |f| %>
  <%= devise_error_messages! %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <%= f.error_notification %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
  <%= f.input :password_confirmation, :required => false %>
  <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>

	<br/>
	<div>
	<% for role in User::ROLES %>
		<%if role == 'admin1' || role == 'turker1'%>

		<%else%>
		 <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"}%>
		 <%= label_tag "user_roles_#{role}", role.humanize %><br />
		<%end%>

	<% end %>
	<%= hidden_field_tag "user[roles][]", "" %>
	</div>
	<br/>
  <%= f.button :submit, 'Update', :class => 'btn-primary' %>  
<% end %>

<h3>Subscription Plan: </h3> 
<%if @user.plan%>
	<p><%=@user.subscription.plan.name%></p>
    <p><a data-toggle="modal" href="#plan-options" class="btn btn-mini" type="button">Change Plan</a></p>
	
	<p><%=@user.subscription.last_4_digits%></p>
    <p><a data-toggle="modal" href="#card-data" class="btn btn-mini" type="button">Change card</a></p>
	
<%else%>
	Free 
	<%= link_to 'Subscribe', plans_path %>
<%end%>


<%= button_to "Cancel my subscription", @user.subscription, :data => { :confirm => "Are you sure you want to cancel your subscription?" }, :method => :delete %>.
<p>
<%= link_to "Back", :back %>
</p>

<div id="plan-options" class="modal" style="display: none;">
  <%= simple_form_for @user.subscription,  :url => update_plan_path, :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Change Plan</h3>
    </div>
    <div class="modal-body">
      <%= f.input :plan_id, :collection => Plan.all, :as => :radio_buttons, :label_method => lambda {|t| t.name.titleize}, :label => false, :item_wrapper_class => 'inline' %>
		<p><%= link_to "View plan details", plans_path%></p>
	</div>
    <div class="modal-footer">
      <%= f.submit "Change Plan", :class => "btn btn-primary" %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>

<div id="card-data" class="modal" style="display: none;">
  <%= simple_form_for @user.subscription, :url => update_card_path, :html => {:method => :put, :id => 'new_subscription', :class => 'form-horizontal card_form' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3>Change Credit Card</h3>
    </div>
    <div class="modal-body">
      <div class="field">
        <%= label_tag :card_number, "Credit Card Number" %>
        <%= text_field_tag :card_number, nil, name: nil %>
      </div>
      <div class="field">
        <%= label_tag :card_code, "Card Security Code (CVV)" %>
        <%= text_field_tag :card_code, nil, name: nil %>
      </div>
      <div class="field">
        <%= label_tag :card_month, "Card Expiration" %>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}%>
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, {name: nil, id: "card_year"}%>
      </div>
      <%= f.hidden_field :stripe_card_token %>
    </div>
  <div id="stripe_error">
    <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>
    <div class="modal-footer">
      <%= f.submit "Change Credit Card", :class => "btn btn-primary" %>
      <a class="btn" data-dismiss="modal" href="#">Close</a>
    </div>
  <% end %>
</div>
